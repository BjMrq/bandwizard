<!-- band search -->

<!-- text -->
<% unless @near_bands_with_scores_sorted == nil %>

  <div class="margin">
      <h2 class="title"><strong><%= @near_bands_with_scores_sorted.count %></strong> search results</h2>
      <div>
        <div style="display: flex;">
          <div class="row">
            <% @near_bands_with_scores_sorted.each do |b| %>
            <% band = b[0] %>
            <% score = b[1] %>
              <% unless score == 0 %>
                <div class="column">

                  <div class="card-band">

                    <%= cl_image_tag(band.band_photos.last.photo, class: "bandphoto", style: "width: 100%; height: 20vh; object-fit: cover; border-radius") %>


                    <div class="card-band-infos">
                      <!-- checkbox for stars -->
                    <% unless current_user.nil? %>

                      <%= button_to stars_path(band), method: :post, id:"favorite_link-#{band.id}",remote:true  do %>
                        <% if band.favorited_by?(current_user) %>
                          <i class="fas fa-star"></i>
                        <% else %>
                          <i class="far fa-star"></i>
                        <% end %>
                      <% end %>

                    <% end %>
                     <!-- checkbox for stars -->
                      <!--  -->
                      <%= link_to band.name, band_path(band) %>
                      <br>
                      <li>
                        <% band.styles.each_with_index do |style, i| %>
                          <%= style.name %><%= i == band.styles.count - 1 ? "" : ", " %>
                        <% end %>
                      </li>
                      <li style="color: red;">
                        <% band.instruments.each do |instrument| %>
                          <%= instrument.name %>
                        <% end %>
                      </li>
                      Distance: <%= band.distance_to(@address).round(1) %> km
                      <p>Matching score: <%= score %></p>

                    </div>
                  </div>

                </div>
              <% end %>
            <% end %>
          </div>

          <% @results = [] %>
        <!-- convert to hash -->
          <% @near_bands_sorted.each do |b| %>
            <% band = {} %>
            <% band["lat"] = b.latitude%>
            <% band["long"] = b.longitude %>
            <% @results.push(band) %>
          <% end %>

        <!-- map -->
    <!--       <div
          id="map"
          class="map-custom"
          style="height: 100%; width: 100%"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div> -->
      </div>
      <%= link_to "See map", map_path({results:"#{@results}"}) %>
    <% end %>
  </div>

<!-- musician search -->

<!-- text -->
<% unless @musicians.nil? %>

  <div class="card-container">

  <div class="container">
    <h1 class="title">Musicians</h1>
      <div class="d-flex">
        <ul style='padding-inline-start: 0px;'>
          <% @musicians.each do |musician| %>
            <div class="card-product">
              <li><%= link_to musician.username, public_profile_path(musician) %></li>
              <div class="card-product-infos">
                <li> musician.bio%></li>
              </div>
            </div>
          <% end %>
        </ul>


    <% @results = [] %>
    <!-- convert to hash -->
    <% @musicians.each do |m| %>
      <% musician = {} %>
      <% musician["lat"] = m.latitude%>
      <% musician["long"] = m.longitude %>
      <% musician["address"] = m.address %>
      <% musician["username"] = m.username %>
      <% @results.push(musician) %>
    <% end %>

      <%= link_to "See map", map_path({results:"#{@results}"}) %>

