<div class="center-msg-container">
  <div>
    <%= form_for message, remote: true, authenticity_token: true do |f| %>
      <%= f.text_area :msg, class: "form-control msg-box", data: {textarea: "message"} %>
      <%= f.hidden_field :conversation_id, value: conversation.id %>
  </div>
  <div>
      <%= f.submit "Send", class: "btn btn-primary send-btn", data: {send: "message"} %>
    <% end %>
  </div>
</div>
